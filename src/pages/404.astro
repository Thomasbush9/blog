---
import BaseLayout from '../layouts/BaseLayout.astro';

const basePath = import.meta.env.BASE_URL ? import.meta.env.BASE_URL.replace(/^\/+|\/+$/g, '') : '';
const getPath = (path: string) => {
  if (!basePath) return path;
  return path === '/' ? `/${basePath}` : `/${basePath}${path}`;
};
---

<BaseLayout title="404 - Page Not Found" description="Page not found">
  <div class="not-found">
    <h1><span class="prompt">$</span> 404</h1>
    <p class="message">Page not found</p>
    <p class="hint">The page you're looking for doesn't exist.</p>
    <a href={getPath('/')} class="home-link">‚Üê Return home</a>
  </div>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
    padding: 4rem 0;
  }

  .prompt {
    color: var(--accent-green);
    margin-right: 0.5rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .message {
    font-size: 1.5rem;
    color: var(--text-secondary);
  }

  .hint {
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .home-link {
    font-family: var(--font-mono);
    color: var(--accent-blue);
  }
</style>
